{
  "name": "oj-bundle",
  "displayName": "oj-bundle",
  "description": "oj-bundle adaptor",
  "publisher": "alfred-bao",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AlfredChester/oj-bundle-helper"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "oj-bundle.bundle-and-paste",
        "title": "oj-bundle: Bundle and paste"
      }
    ],
    "configuration": {
      "title": "oj-bundle",
      "properties": {
        "oj-bundle.executable": {
          "type": "string",
          "default": "oj-bundle",
          "description": "oj-bundle executable path."
        },
        "oj-bundle.args": {
          "type": "string",
          "default": "",
          "description": "Space seperated additional flags passed to oj-bundle. Example '-I path/to/your/library1 -I path/to/your/library2'."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "child_process": "^1.0.2"
  }
}
